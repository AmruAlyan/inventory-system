rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /receipts/{purchaseId}/{fileName} {
      // Allow read and write access to authenticated users
      allow read, write: if request.auth != null;
    }
    
    match /products/{fileName} {
      // Allow read and write access to authenticated users for product images
      allow read, write: if request.auth != null;
    }
    
    match /users/avatars/{fileName} {
      // Allow read and write access to authenticated users for user avatars
      allow read, write: if request.auth != null;
    }
  }
}
